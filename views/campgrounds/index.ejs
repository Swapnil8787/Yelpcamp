<%- include ('../partials/header') %>

<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1>
                <svg class="bi bi-house-door-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6.5 10.995V14.5a.5.5 0 0 1-.5.5H2a.5.5 0 0 1-.5-.5v-7a.5.5 0 0 1 .146-.354l6-6a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 .146.354v7a.5.5 0 0 1-.5.5h-4a.5.5 0 0 1-.5-.5V11c0-.25-.25-.5-.5-.5H7c-.25 0-.5.25-.5.495z"/>
                    <path fill-rule="evenodd" d="M13 2.5V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z"/>
                </svg>
                Welcome to YelpCamp!
            </h1>
            <p>View our hand picked campgrounds from all over the world.</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary">Add new Campground</a>
            </p>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(camp){ %>
        <div class="col-md-3 col-sm-6">
            <div class="card my-2">
                <img src="<%=camp.image%>" alt="camp" class="img-thumbnail">
                <div class="caption">
                    <h4><%=camp.name%></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More Info</a>
                </p>
            </div>
            
        </div>
        <% }) %>
    </div>
</div>

<%- include ('../partials/footer') %>
